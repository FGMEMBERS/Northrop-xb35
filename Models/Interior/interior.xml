<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>tours</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intbulle</object-name>
    <object-name>intbulleA</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intbulle</object-name>
    <object-name>intbulleA</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intbulle</object-name>
    <object-name>intbulleA</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Northrop-xb35/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -6.520 </x-m>
      <y-m> -0.395 </y-m>
      <z-m>  0.260 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Northrop-xb35/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.622 </x-m>
      <y-m> -0.418 </y-m>
      <z-m>  0.211 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Co pilote -->
  <model>
    <path>Aircraft/Northrop-xb35/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -5.699 </x-m>
      <y-m>  1.039 </y-m>
      <z-m> -0.274 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Mitrailleur -->
  <model>
    <path>Aircraft/Northrop-xb35/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  2.586 </x-m>
      <y-m> -0.030 </y-m>
      <z-m>  0.481 </z-m>
      <roll-deg>      0 </roll-deg>
      <pitch-deg>     0 </pitch-deg>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

</PropertyList>

